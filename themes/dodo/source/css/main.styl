
.devb
  border 1px dashed red

body
  position absolute
  width 100%
  height 100%
  color #8492a6
  font-family Nunito, sans-serif
  font-size 1rem
  font-weight 400
  line-height 1.7
  text-align left
  background-color #f8f8fb

.container-app
  max-width 1420px
  height 100%
  overflow-x hidden
  display flex
  align-items flex-start

  &:before {
    content ""
    position absolute
    top 0
    left 0
    width 100%
    z-index -1
    pointer-events none
    height 430px
    background-color #6e00ff
    border-bottom-left-radius 2.5rem
  }

  .sidenav
    display block
    margin-left 40px
    width 250px
    min-width 250px

    @media screen and (max-width: 800px)
      display none

    .sidenav-header
      padding 1.5rem 0
      margin-bottom 1.5rem

      .sidenav-title
        font-size 2rem

    .sidenav-user
      height 290px
      text-align center

      .avatar
        position relative
        display inline-flex
        align-items center
        color #ffffff
        border-radius 50%
        overflow hidden;

        img
          width 6rem
          height 6rem

  .header
    position relative
    width 100%

  .nav-link
    color hsla(0, 0%, 100%, .85)
    font-size .875rem
    font-weight 600
    text-transform none
    letter-spacing 0
    -webkit-transition all .15s linear
    transition all .15s linear

  .footer
    position relative
    width 100%
    padding 15px
    font-size .8rem

  .main-content
    width 100%
    max-width calc(100% - 250px)
    padding-left 40px

    @media screen and (max-width: 800px)
      max-width 100%
      padding-left 0

  .index
    padding 15px

  .card
    box-shadow 0 0.75rem 1.5rem rgba(18, 38, 63, .03);
