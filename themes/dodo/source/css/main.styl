@font-face
  font-family 'Cascadia'
  src url('/font/Cascadia-Code-Regular-2.ttf')

body
  position absolute
  width 100%
  height 100%
  color #b9b9b9
  font-family Cascadia, microsoft yahei, sans-serif;
  font-size 1rem
  font-weight 400
  line-height 1.7
  text-align left
  background-color #000000

.container-app
  position absolute
  width 100%
  height 100%
  overflow-x hidden

  .container-content
    position relative
    width 90%
    overflow-x hidden
    margin auto
    display flex
    align-items flex-start

    .sidenav
      display block
      width 250px
      min-width 250px

      @media screen and (max-width: 950px)
        display none

      .sidenav-header
        padding 1.5rem 0
        margin-bottom 1.5rem

        .sidenav-title
          font-size 2rem

      .sidenav-user
        height 290px
        text-align center

        .avatar
          position relative
          display inline-flex
          align-items center
          color #ffffff
          border-radius 50%
          overflow hidden;

          img
            width 6rem
            height 6rem

        .sidenav-icon
          width 50%

    .main-content
      width 100%
      max-width calc(100% - 250px)
      padding-left 10px

      @media screen and (max-width: 950px)
        max-width 100%
        padding-left 0

    .header
      position relative
      width 100%

    .nav-link
      color hsla(0, 0%, 100%, .85)
      font-size .875rem
      font-weight 600
      text-transform none
      letter-spacing 0
      -webkit-transition all .15s linear
      transition all .15s linear

    .footer
      position relative
      width 100%
      padding 15px
      font-size .8rem

    .index
      padding 15px

    .card
      box-shadow 0 0.75rem 1.5rem rgba(18, 38, 63, .03);
