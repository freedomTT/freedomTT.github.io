.post-item
  margin-bottom 50px

  .post-title
    font-size 40px
    background: linear-gradient(to right, #b2fefa, #0ed2f7, #0052d4);
    -webkit-text-fill-color: transparent
    -webkit-background-clip: text
    font-weight 600

  .post-tag
    border 2px solid rgba(153, 153, 153, 0.2)
    text-align center
    border-radius 13px
    display inline-block
    padding 2px 10px
    color rgba(153, 153, 153, 0.4)
    font-weight 600
    margin-top 10px
    font-size 12px

  .post-category
    padding 0 5px
    color #fe5783
    font-size 14px

  .post-date
    font-size 14px
    color rgba(153, 153, 153, 0.6)

  .post-content
    position relative
    margin-top 20px
    max-width 1000px

    .post-bg
      position absolute
      right 0
      top 0
      width: 400px
      height 400px
      background-repeat no-repeat
      background-size cover
      background-position 50% 50%
      z-index: -1
