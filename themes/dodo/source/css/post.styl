.post-item
  margin 50px 0

  &:hover

    .post-title
      background-position: 3000px 0

  h1, h2, h3, h4, h5
    color #d0c3d0
    margin-top 20px

  .post-title
    font-size 40px
    background-image: linear-gradient(125deg, #49b4fe, #0ed2f7, #0539d4, #49b4fe)
    -webkit-text-fill-color: transparent
    -webkit-background-clip: text
    background-repeat: repeat
    font-weight 600
    transition background-position 10s

  .post-tag
    border 2px solid rgba(153, 153, 153, 0.2)
    text-align center
    border-radius 13px
    display inline-block
    padding 2px 10px
    color rgba(153, 153, 153, 0.4)
    font-weight 600
    margin-top 10px
    font-size 12px

  .post-category
    padding 0 5px
    color #fe5783
    font-size 14px

  .post-date
    font-size 14px
    color rgba(153, 153, 153, 0.6)

  .post-content
    position relative
    margin-top 20px
    transition color 1s

    .post-title-bg
      width 100%
      margin 20px 0

    .post-images
      width 100%
      max-width 900px
      border-radius 10px
      margin 20px 0

    .post-text
      position relative
      z-index 1

      & > table {
        border-collapse: collapse
        font-size 14px
        border 1px solid #eeeeee
        min-width 800px
        border-radius 10px
        margin 20px 0
        overflow hidden

        th {
          font-weight: 600
          padding: 4px 7px
        }

        td {
          color: #cacaca
          padding: 4px 7px
          border-right 1px solid #eee;
        }

        th:first-child,
        td:first-child {
          padding-left: 8px
        }

        tr {
          th {
            border: 0
          }

          td {
            border: 0
          }
        }

        tr:nth-child(even) {
          background: rgba(217, 230, 249, 0.2)
        }

        tr:nth-child(odd) {
          background: rgba(255, 255, 255, 0.1)
        }
      }

    .post-bg
      position absolute
      right 0
      top 0
      width 80%
      max-width: 700px
      height 100%
      max-height 400px
      background-repeat no-repeat
      background-size cover
      background-position 50% 50%
      z-index: 0


.post-page
  .post-item
    padding 50px 0

  .post-title
    font-size 40px
    text-align center
    background-image: none
    -webkit-text-fill-color: initial
    -webkit-background-clip: initial
    cursor text
    color #595959
    font-weight 500
    padding-bottom 20px

  .post-desc
    font-size 14px
    line-height 30px

  .post-tag, .post-date
    border 0
    padding 0 5px
    color #fe5783
    font-size 14px
    font-weight 400
    margin-top 0
