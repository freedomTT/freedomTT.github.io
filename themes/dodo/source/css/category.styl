.category-and-tags
  position relative
  width 100%
  height 800px
  display: flex
  justify-content: left
  align-items: center
  padding 20px
  margin-top 20px!important

  border: 2px solid #000ef7;

  &:before, &:after {
    content: " ";
    display: block;
    position: absolute;
    width 820px
    height 820px
    top: -10px;
    left: -10px;
    border: 2px solid #ff0073;
    z-index: 10;
    box-sizing: border-box;
    -webkit-animation: clipAni 10s infinite linear;
  }

  &:before {
    -webkit-animation-delay: -5s;
  }

  @keyframes clipAni {
    0%, 100% {
      clip: rect(0px, 820px, 820px, 820px);
    }
    25% {
      clip: rect(0px, 820px, 0, 0px);
    }
    50% {
      clip: rect(0px, 0, 820px, 0px);
    }
    75% {
      clip: rect(820px, 820px, 820px, 0px);
    }
  }

  .title
    position absolute
    left 10px
    top 50px
    display block
    padding 0 20px
    font-size 14px
    color #ff0073

  .cta
    margin-right 20px

