.about-container
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  z-index: 1;

  * {
    user-select: none;
  }

  canvas {
    position: absolute;
    left 0
    top 0
    width: 100%;
    height: 100%;
  }

  .about-text
    width: 350px;
    height 10px
    position absolute
    left 0
    top 0
    bottom 0
    right 0
    margin auto
    font-size 20px
    ont-size: 10rem;
    font-weight: 200;
    letter-spacing: .05em;
    text-align: center;
    color: #fed4ec;
    text-shadow: 0 0 0.025em #fff, 0 0 0.05em #fff, 0 0 0.1em #fa26a0, 0 0 0.2em #fa26a0, 0 0 0.25em #fa26a0, 0 0 0.75em #fa26a0, 0 0 1.25em #fa26a0, 0 0 1.75em rgba(250, 38, 160, 0.5);
